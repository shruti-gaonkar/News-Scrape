<div class="row">
    <div id="article_container" class="col s12">
        {{#each contents}}
        <div id="news_{{this._id}}"">
            <div class=" col s12">
            <h4 class="header"><a href=" {{this.link}}" target="_blank">{{this.headline}}</a></h4>
            <div class="card horizontal">
                <div class="card-image">
                    <img src="
                    {{#if this.image}}   
                        {{this.image}}
                    {{else}}
                        /images/no_image.png
                    {{/if}}
                    " style="width:112px;">
                </div>
                <div class="card-stacked">
                    <div class="card-content">
                        <p>
                            {{#if this.summary }}
                            {{this.summary }}
                            {{else}}
                            {{this.headline }}
                            {{/if}}
                        </p>
                        <p>{{this.byline}}</p>
                    </div>
                    <div class="card-action">
                        {{#if saved}}
                        <a class="waves-effect waves-light btn orange modal-trigger" data-id="{{this._id}}"
                            data-headline="{{this.headline}}" data-toggle="modal" data-target="notemodal">ARTICLE
                            NOTES</a>
                        <a class="waves-effect waves-light btn red modal-trigger btn_save_article"
                            data-id="{{this._id}}" data-saved="false">DELETE ARTICLE</a>
                        {{else}}
                        <a class="waves-effect waves-light btn btn_save_article" data-id="{{this._id}}"
                            data-saved="true">SAVE
                            ARTICLE</a>
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<div id="notemodal" class="modal">
    <div class="modal-content">
        {{> note/note-block}}
    </div>
</div>

<div class="no_article_container">
    {{#if saved}}
    {{#unless contents}}
    <div class="alert alert-warning text-center">
        <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
    </div>
    <div class="card">
        <div class="card-header text-center">
            <h3>Would You Like to Browse Available Articles?</h3>
        </div>
        <div class="card-body text-center">
            <h4>
                <a href="/">Browse Articles</a>
            </h4>
        </div>
    </div>
    {{/unless}}
    {{else}}
    <div class="alert alert-warning text-center">
        <h4>Uh Oh. Looks like we don't have any new articles.</h4>
    </div>
    <div class="card">
        <div class="card-header text-center">
            <h3>What Would You Like To Do?</h3>
        </div>
        <div class="card-body text-center">
            <h4><a href="javascript:void(0);" class="scrape-new">Try Scraping New
                    Articles</a></h4>
            <h4><a href="/saved">Go to Saved Articles</a></h4>
        </div>
    </div>
    {{/if}}
</div>
</div>